{
  "name": "@gleanwork/configure-mcp-server",
  "version": "1.0.0-beta.0",
  "description": "MCP server configurator for Glean",
  "keywords": [
    "mcp",
    "mcp-server"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gleanwork/mcp-server.git",
    "directory": "packages/configure-mcp-server"
  },
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@glean.com>",
  "type": "module",
  "exports": {
    ".": "./build/index.js"
  },
  "main": "./build/index.js",
  "bin": {
    "configure-mcp-server": "./build/index.js"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts",
    "build/**/*.js.map",
    "build/**/*.d.ts.map",
    "!build/**/test/**",
    "!build/test/**",
    "!build/src/**",
    "!build/vitest.config.*"
  ],
  "scripts": {
    "build": "rimraf build && tsc",
    "go": "tsx src/index.ts",
    "lint": "npm-run-all --sequential lint:*",
    "lint:eslint": "eslint \"src/**/*.ts\" --fix",
    "lint:package-json": "sort-package-json",
    "lint:ts": "tsc --noEmit",
    "prepare": "pnpm run build",
    "test": "vitest run",
    "test:all": "pnpm lint && pnpm lint:ts && pnpm test",
    "test:watch": "vitest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@gleanwork/mcp-config-schema": "^0.7.0",
    "@gleanwork/mcp-server-utils": "^0.7.18",
    "dotenv": "^17.2.1",
    "mcp-remote": "^0.1.18",
    "meow": "^13.2.0",
    "tldts": "^7.0.10",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@scalvert/bin-tester": "^2.1.1",
    "@types/node": "^24.0.13",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "console-test-helpers": "^0.3.3",
    "eslint": "^9.32.0",
    "fixturify": "^3.0.0",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "msw": "^2.10.5",
    "npm-run-all": "^4.1.5",
    "open": "^10.2.0",
    "release-it": "^15.5.0",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
