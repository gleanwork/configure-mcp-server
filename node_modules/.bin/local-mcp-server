#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/steve.calvert/workspace/glean/mcp-server/packages/local-mcp-server/build/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/packages/local-mcp-server/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/packages/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/node_modules:/Users/steve.calvert/workspace/glean/node_modules:/Users/steve.calvert/workspace/node_modules:/Users/steve.calvert/node_modules:/Users/node_modules:/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/steve.calvert/workspace/glean/mcp-server/packages/local-mcp-server/build/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/packages/local-mcp-server/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/packages/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/node_modules:/Users/steve.calvert/workspace/glean/node_modules:/Users/steve.calvert/workspace/node_modules:/Users/steve.calvert/node_modules:/Users/node_modules:/node_modules:/Users/steve.calvert/workspace/glean/mcp-server/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@gleanwork/local-mcp-server/build/index.js" "$@"
else
  exec node  "$basedir/../@gleanwork/local-mcp-server/build/index.js" "$@"
fi
