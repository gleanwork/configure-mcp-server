#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/connect-mcp-server/dist/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/connect-mcp-server/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/connect-mcp-server/dist/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/connect-mcp-server/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules/@gleanwork/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/@gleanwork+connect-mcp-server@0.2.4/node_modules:/Users/steve.calvert/workspace/glean/configure-mcp-server/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@gleanwork/connect-mcp-server/dist/proxy.js" "$@"
else
  exec node  "$basedir/../@gleanwork/connect-mcp-server/dist/proxy.js" "$@"
fi
